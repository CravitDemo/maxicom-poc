<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="brokerbin_res_config_settings_view_form_inh" model="ir.ui.view">
        <field name="name">brokerbin.res.config.settings.view.form.inh</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='sale_ebay']" position="after">
                <h2>BrokerBin</h2>
                <div class="row mt16 o_settings_container"
                     id="pain">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <div class="content-group">
                                <div class="row mt16">
                                    <label for="brokerbin_link"
                                           class="col-md-3 o_light_label"/>
                                    <field name="brokerbin_link"/>
                                </div>
                                <div class="row mt16">
                                    <label for="brokerbin_user"
                                           class="col-md-3 o_light_label"/>
                                    <field name="brokerbin_user"/>
                                </div>
                                <div class="row mt16">
                                    <label for="brokerbin_pw"
                                           class="col-md-3 o_light_label"/>
                                    <field name="brokerbin_pw"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
