<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_res_company_form_brokerbin_field" model="ir.ui.view">
            <field name="name">view.res.company.form.brokerbin.field</field>
            <field name="model">res.company</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="base.view_company_form" />
            <field name="arch" type="xml">
                <xpath expr="//notebook/page" position="after">
                    <page name="brokerbin" string="BrokerBin">
                           <group>
                               <group>
                                   <field name="brokerbin_link"/>
                                   <field name="brokerbin_user"/>
                                   <field name="brokerbin_pw"/>
                               </group>
                           </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>